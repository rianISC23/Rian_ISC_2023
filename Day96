package ISC_2023;
import java.util.Scanner;
public class Main {
    
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int tahunn;
        double modall,investasii=0;
        
        System.out.print("Masukan modal\t: ");
        modall = input.nextDouble();
        System.out.print("Tahun\t\t: ");
        tahunn = input.nextInt();
        System.out.print("\n");
        for (int i = 1; i <= tahunn; i++) {
            investasii = 0.09 * modall;
            modall +=investasii;
             System.out.println("Tahun ke "+ i + "\t: "+modall);
        }
            System.out.println("\n");
             System.out.println("jadih hasil selama "+ tahunn+" adalah " + modall);
    }
    
}
